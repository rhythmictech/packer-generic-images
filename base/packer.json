{
  "variables": {
    "region": "us-east-1",
    "instance_type": "t3.medium",
    "associate_public_ip": "true"
  },
  "builders": [
    {
      "name": "null",
      "type": "null",
      "communicator": "none"
    },
    {
      "name": "xenial-amazon-ebs",
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ubuntu",
      "ami_name": "packer_ubuntu_xenial_{{timestamp}}",
      "associate_public_ip_address": "{{user `associate_public_ip`}}",
      "ebs_optimized": true,
      "run_tags": {
        "Name": "Packer Builder",
        "launched": "{{timestamp}}"
      },
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-xenial-16.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "099720109477"
        ],
        "most_recent": true
      },
      "tags": {
        "Name": "packer_ubuntu_xenial {{timestamp}}",
        "build_time": "{{timestamp}}"
      }
    },
    {
      "name": "bionic-amazon-ebs",
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ubuntu",
      "ami_name": "packer_ubuntu_bionic_{{timestamp}}",
      "associate_public_ip_address": "{{user `associate_public_ip`}}",
      "ebs_optimized": true,
      "run_tags": {
        "Name": "Packer Builder",
        "launched": "{{timestamp}}"
      },
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "ubuntu/images/*ubuntu-bionic-18.04-amd64-server-*",
          "root-device-type": "ebs"
        },
        "owners": [
          "099720109477"
        ],
        "most_recent": true
      },
      "tags": {
        "Name": "packer_ubuntu_bionic {{timestamp}}",
        "build_time": "{{timestamp}}"
      }
    },
    {
      "name": "amazon2-amazon-ebs",
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "instance_type": "{{user `instance_type`}}",
      "ssh_username": "ec2-user",
      "ami_name": "packer_amazon_2_{{timestamp}}",
      "associate_public_ip_address": "{{user `associate_public_ip`}}",
      "ebs_optimized": true,
      "run_tags": {
        "Name": "Packer Builder",
        "launched": "{{timestamp}}"
      },
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "amzn2-ami-hvm-2.*-x86_64-gp2",
          "root-device-type": "ebs"
        },
        "owners": [
          "amazon"
        ],
        "most_recent": true
      },
      "tags": {
        "Name": "packer_amazon_2 {{timestamp}}",
        "build_time": "{{timestamp}}"
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell-local",
      "command": "ansible-galaxy install -f -r requirements.yml",
      "only": [
        "null"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "while [ ! -f /var/lib/cloud/instance/boot-finished ]; do echo 'Waiting for cloud-init...'; sleep 1; done"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo apt-get update",
        "sudo apt-get install -y python python3"
      ],
      "only": [
        "xenial-amazon-ebs",
        "bionic-amazon-ebs"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "sudo yum install -y python python3 python-pip python3-pip"
      ],
      "only": [
        "amazon2-amazon-ebs"
      ]
    },
    {
      "type": "ansible",
      "playbook_file": "./provision.yml"
    }
  ]
}
